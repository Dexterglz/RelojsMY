<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HealthFragment"
    android:orientation="vertical"
    android:background="@color/backgroundPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Iniciar escaneo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">
                <!--TÃ­tulo-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/diagnosticos_grupos"
                    android:textSize="22dp"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <!--Descripcion-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--Texto-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/bg_rounded_box"
                            android:backgroundTint="@color/white"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/startScanDIA"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:textStyle="italic"
                                android:textColor="@color/text_color"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--Imagen-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:src="@mipmap/cardiologia"/>
                </FrameLayout>
                <!--Titulo-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/open_devices_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/btn_actualizar_selector"
                    android:text="@string/generar_diagnostico"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>
            <!--Historial de diagnosticos-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">
                <!--Titulo-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/historia"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/historial_diagnosticos"
                        android:textSize="22dp"
                        android:paddingHorizontal="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <!--Lista-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- ListView con card moderno -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:clipToPadding="false"
                            android:clipChildren="false">
                            <ListView
                                android:id="@+id/listViewPDFs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@color/gray"
                                android:dividerHeight="1dp"
                                android:clipToPadding="false"
                                android:scrollbars="vertical"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>