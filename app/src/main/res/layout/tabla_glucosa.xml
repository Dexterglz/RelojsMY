<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewGrupo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12sp"
            android:text="Bebés:\n0-5 años de edad"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="4dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12sp"
            android:text="EN AYUNAS, AL DESPERTAR O DESPUÉS DEL AYUNO NOCTURNO"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="4dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="HASTA DOS HORAS LUEGO DE CONSUMIR ALIMENTOS"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="4dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="ANTES DE ACOSTARSE O DESPUÉS DE 4 HORAS DE COMER"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Valores de glucemia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E8F5E9"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewAyunas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="100-180 mg/dl"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/textViewDespuesComida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Máximo 200 mg/dl"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/textViewAntesDormir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="100-200 mg/dl"
            android:padding="4dp"/>
    </LinearLayout>

</LinearLayout>