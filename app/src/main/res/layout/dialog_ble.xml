    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Close Button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/gray"
                android:src="@drawable/cross"/>
        </LinearLayout>
        <!--Title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lista_dispositivos"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <!--Completado-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <!-- Icon -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center">

                <!-- Círculo base -->
                <ImageView
                    android:id="@+id/circleBg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_shape"
                    app:tint="#e3f2ed"/>

                <!-- Check centrado -->
                <ImageView
                    android:id="@+id/checkIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_check"
                    app:tint="#33c796"/>

                <!-- Ola / línea animada -->
                <View
                    android:id="@+id/ripple"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_circle"/>
            </FrameLayout>
            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/completado"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <!--Description-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/todos_los_datos"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp"/>
            <!--Continue Button-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/gradient_background_1"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/continuar"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <!--Lista de Dispositivos-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <!--Lista de dispositvos-->
            <LinearLayout
                android:id="@+id/devices_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- ListView con card moderno -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:clipToPadding="false"
                    android:clipChildren="false">
                    <ListView
                        android:id="@+id/device_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/gray"
                        android:dividerHeight="0.1dp"
                        android:clipToPadding="false"
                        android:scrollbars="vertical" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <!--Mi equipo -->
            <LinearLayout
                android:id="@+id/my_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- ListView con card moderno -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:clipToPadding="false"
                    android:clipChildren="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--Info Dispositivo-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/image_device"
                                android:padding="10dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@mipmap/device_ring"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/device_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nombre"/>
                                <ImageView
                                    android:layout_marginLeft="20dp"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/battery_full"
                                    app:tint="@color/colorPrimary"/>
                                <TextView
                                    android:id="@+id/device_battery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20%"/>

                            </LinearLayout>
                        </LinearLayout>
                        <!--Boton Desconectar-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/desconectar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/desconectar_dispositivo"
                            app:cornerRadius="20dp"
                            app:backgroundTint="@color/colorPrimary"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="5dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
